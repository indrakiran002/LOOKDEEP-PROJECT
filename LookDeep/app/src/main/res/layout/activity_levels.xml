<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelsActivity">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_below="@id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/level_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="26dp"
            android:layout_marginTop="41dp"

            android:src="@drawable/level_1" />

        <ImageButton
            android:id="@+id/level_2_button"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
android:layout_marginLeft="26dp"
            android:layout_marginTop="41dp"

            android:src="@drawable/level_2" />

        <ImageButton
            android:id="@+id/level_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="41dp"
            android:layout_marginRight="26dp"

            android:src="@drawable/level_3" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_below="@id/ll1"

        android:layout_marginTop="5dp"
        android:orientation="horizontal">


    <ImageButton
    android:id="@+id/level_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

        android:layout_marginLeft="26dp"
        android:layout_marginTop="41dp"

    android:src="@drawable/level_4" />


    <ImageButton
        android:id="@+id/level_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="41dp"

        android:src="@drawable/level_5" />


    <ImageButton
        android:id="@+id/level_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="26dp"

        android:src="@drawable/level_6" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_below="@id/ll2"

        android:layout_marginTop="5dp"
        android:orientation="horizontal">



    <ImageButton
        android:id="@+id/level_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="26dp"
        android:layout_marginTop="41dp"


        android:src="@drawable/level_7" />

    <ImageButton
        android:id="@+id/level_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="41dp"


        android:src="@drawable/level_8" />


    <ImageButton
        android:id="@+id/level_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="26dp"

        android:src="@drawable/level_9" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"


        android:layout_centerHorizontal="true"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="52dp"
        android:text="LEVELS"
        android:textColor="#0C0C0C"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/button"
        android:text="Next "
        android:textColor="#F1EBEB"
        android:textSize="30sp" />


</RelativeLayout>