<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity_7">






    <EditText
        android:id="@+id/level_7_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/s"
        android:layout_centerHorizontal="true"
        android:hint="Enter the Answer Here"
        android:layout_marginTop="30dp"

         />
    <Button
        android:id="@+id/l7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/level_7_btn"
        android:layout_centerHorizontal="true"
        android:text="OK"
        android:layout_marginTop="15dp"
        android:background="#12BF19"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/next_level_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="Next"
        android:textColor="#E9E7EC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="10dp"
        android:text="Level 7"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="324dp"  />

    <ImageButton
        android:id="@+id/hint7"
        android:layout_width="38dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/hint"/>





    <TextView
        android:id="@+id/q7"
        android:layout_width="363dp"
        android:layout_height="73dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Can You solve this?"
        android:textColor="#070606"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q7"
        android:layout_centerHorizontal="true"
        android:text="1+2+3+1\n1+2+3+1\n1+2+3+1=?"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold|italic" />


</RelativeLayout>